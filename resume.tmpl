<!DOCTYPE html>
<html>
<head>
<script src="https://cdn.tailwindcss.com"></script>

<style>
  * {
    font-family: "Inter", monospace;
  }

  .header {
    h1 {
      text-transform: uppercase;
      font-size: 18px;
      font-weight: bold;
      letter-spacing: 0.5px;
    }

    h2 {
      font-size: 11px;
      font-weight: 400;
      letter-spacing: 0.5px;
    }

    p {
      font-size: 10px;
      letter-spacing: 0.5px;
    }

    li {
      font-size: 10px;
      text-align: right;
    }
  }

  .section {
    .heading {
      color: #d13920;
      font-size: 11px;
      font-weight: bold;
      text-transform: uppercase;
    }

    .title {
      font-size: 11px;
      font-weight: bold;
      margin-bottom: 0;
    }

    .sub-title {
      font-size: 11px;
      font-weight: 400;
    }

    .time-span {
      font-size: 10px;
    }

    li {
      font-size: 10px;
    }

    p {
      font-size: 10px;
    }
  }
</style>
</head>

<body>
<div class="container mx-auto px-10 py-10 leading-normal">
  <header class="header">
    <div class="grid grid-cols-6 gap-4">
      <div class="col-span-3">
        <h1>{{ .Header.Name }}</h1>
        <h2>{{ .Header.Headline }}</h2>
      </div>
      <div class="col-start-4 col-span-2 mt-1">
        <ul>
          <li><a class="underline text-blue-600"
              href="{{ .Header.LinkedInUrl }}">{{ .Header.LinkedInUrl }}</a></li>
          <li><a class="underline text-blue-600" href="mailto:{{ .Header.Email }}">{{ .Header.Email }}</a></li>
        </ul>
      </div>
      <div class="mt-1">
        <ul>
          <li>{{ .Header.Location }}</li>
          <li>{{ .Header.Phone }}</li>
        </ul>
      </div>
    </div>
  </header>

  <section class="section">
  	<div>
      <h1 class="heading mt-2 mb-2 pb-1 border border-0 border-b-2 border-[#d13920]">Summary</h1>
      <p>{{ .Summary }}</p>
    </div>
  </section>

  <section class="section">
    <div>
      <h1 class="heading mt-2 mb-2 pb-1 border border-0 border-b-2 border-[#d13920]">Experience</h1>
      {{ range .Jobs }}
      {{ if gt (len .Accomplishments) 0 }}
      <article>
        <div class="grid grid-cols-3 gap-x-4 gap-y-0 mt-2">
          <h2 class="title col-span-2">{{ .Title }} <span class="sub-title"> at {{ .Company }}</span></h2>
          <span class="time-span text-right opacity-50">{{ .StartDate }} - {{ .EndDate }}</span>
          {{ if .Summary }}
          	<p class="col-span-3 max-w-xl">{{ .Summary }}</p>
          {{ end }}
        </div>
        <ul class="list-disc ml-4 max-w-xl">
        {{ range .Accomplishments }}
          <li>{{ . }}</li>
        {{ end }}
        </ul>
      </article>
      {{ end }}
      {{ end }}
    </div>

    {{ if .Education }}
    <div>
      <h1 class="heading mt-2 mb-2 border border-0 border-b-2 border-[#d13920]">Education</h1>
      <article>
        <div class="grid grid-cols-8 gap-x-4 gap-y-0 my-2">
          <h2 class="title">{{ .Education.School }}</h2>
          <h3 class="sub-title col-span-6">{{ .Education.Degree}}</h3>
          <span class="time-span text-right opacity-50">{{ .Education.EndDate }}</span>
        </div>
      </article>
    </div>
    {{ end }}

    {{ if gt (len .Skills) 0}}
    <div>
      <h1 class="heading mt-2 mb-2 border border-0 border-b-2 border-[#d13920]">Skills</h1>
      <article>
        <ul class="list-disc ml-4">
        {{ range .Skills }}
          <li>{{ . }}</li>
        {{ end }}
        </ul>
      </article>
    </div>
    {{ end }}
  </section>

</div>
</body>

</html>
